@model Lucky.Models.AddWinningNumber

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.error</h2>

@using (Html.BeginForm("Index","Home",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
<h2 class="text-center">@Html.ValidationMessageFor(m=>m.UserId,"",new {@class="text-danger" })</h2>
<div class="form-horizontal">
    <h4>AddWinningNumber</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m=>m.UserId,new { Value=Session["UserId"] })
   


    <div class="form-group">
        @Html.Label("Generate Randomly", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Random", new List<SelectListItem>() {
       new SelectListItem(){Text="Yes",Value="1"}
       ,new SelectListItem(){Text="No",Value="0",Selected=true}
       }, new { @class = "form-control" } )
            @Html.ValidationMessage("Random", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Enter number", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m=>m.Byhand, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(m=>m.Byhand, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<h5>@ViewBag.message</h5>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
